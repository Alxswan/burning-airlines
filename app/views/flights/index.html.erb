
<p id="notice"><%= notice %></p>

<h2>Choose a Flight</h2>

<% if  !@flights_results.empty? %>
  <ul>
      <% @flights_results.each do |flight| %>
       
            <li>
                <%#= link_to flight.number, "/flights/#{ flight.id }" %>
                <p data-url="/flights/<%= flight.id %>"><%= flight.number %></p>
            </li>
        
      <% end %>
  </ul>

<% elsif @flights_results.empty?%>

    <h3>No flights found</h3>

    <%= link_to 'Back to search', root_path %>


<h1> Flights</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Origin</th>
      <th>Destination</th>
      <th>Date</th>
      <th>Plane</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.number %></td>
        <td><%= flight.origin %></td>
        <td><%= flight.destination %></td>
        <td><%= flight.date %></td>
        <td><%= flight.plane_id %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Flight', new_flight_path %>

<% end %>
